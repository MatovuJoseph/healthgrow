<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthyentrepreneurs.healthgrow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/health_grow_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/health_grow_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthGrow">
        <activity
            android:name=".ui.products.ProductSalesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.products.SellProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.NewCustomerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.CustomerRegistryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RewardsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.HealthGrow.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LanguagePickerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CountryPickerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
    </application>

</manifest>